{
  "dataRoles": [
    {
      "name": "workItemId",
      "displayName": "Work Item ID",
      "kind": "Grouping",
      "description": "Unique identifier for the work item"
    },
    {
      "name": "title",
      "displayName": "Title",
      "kind": "Grouping",
      "description": "Work item title"
    },
    {
      "name": "workItemType",
      "displayName": "Work Item Type",
      "kind": "Grouping",
      "description": "Type: Epic, Feature, or Milestone"
    },
    {
      "name": "state",
      "displayName": "State",
      "kind": "Grouping",
      "description": "Work item state (New, Active, Closed, etc.)"
    },
    {
      "name": "startDate",
      "displayName": "Start Date",
      "kind": "Grouping",
      "description": "Start date for the work item"
    },
    {
      "name": "targetDate",
      "displayName": "Target Date",
      "kind": "Grouping",
      "description": "Target/end date for the work item"
    },
    {
      "name": "parentId",
      "displayName": "Parent ID",
      "kind": "Grouping",
      "description": "Parent work item ID for hierarchy (e.g., Epic ID for Features)"
    },
    {
      "name": "predecessorId",
      "displayName": "Predecessor ID",
      "kind": "Grouping",
      "description": "ID of predecessor work item for dependency lines"
    },
    {
      "name": "areaPath",
      "displayName": "Area Path / Scheme",
      "kind": "Grouping",
      "description": "Area path or scheme for grouping (e.g., Program, Portfolio)"
    },
    {
      "name": "iterationPath",
      "displayName": "Iteration Path",
      "kind": "Grouping",
      "description": "Iteration path for grouping"
    },
    {
      "name": "assignedTo",
      "displayName": "Assigned To",
      "kind": "Grouping",
      "description": "Person assigned to the work item"
    },
    {
      "name": "priority",
      "displayName": "Priority",
      "kind": "Grouping",
      "description": "Work item priority"
    },
    {
      "name": "tags",
      "displayName": "Tags",
      "kind": "Grouping",
      "description": "Work item tags"
    }
  ],
  "dataViewMappings": [
    {
      "conditions": [
        {
          "workItemId": { "max": 1 },
          "title": { "max": 1 },
          "workItemType": { "max": 1 },
          "state": { "max": 1 },
          "startDate": { "max": 1 },
          "targetDate": { "max": 1 },
          "parentId": { "max": 1 },
          "predecessorId": { "max": 1 },
          "areaPath": { "max": 1 },
          "iterationPath": { "max": 1 },
          "assignedTo": { "max": 1 },
          "priority": { "max": 1 },
          "tags": { "max": 1 }
        }
      ],
      "categorical": {
        "categories": {
          "select": [
            { "for": { "in": "workItemId" } },
            { "for": { "in": "title" } },
            { "for": { "in": "workItemType" } },
            { "for": { "in": "state" } },
            { "for": { "in": "startDate" } },
            { "for": { "in": "targetDate" } },
            { "for": { "in": "parentId" } },
            { "for": { "in": "predecessorId" } },
            { "for": { "in": "areaPath" } },
            { "for": { "in": "iterationPath" } },
            { "for": { "in": "assignedTo" } },
            { "for": { "in": "priority" } },
            { "for": { "in": "tags" } }
          ],
          "dataReductionAlgorithm": {
            "top": { "count": 10000 }
          }
        }
      }
    }
  ],
  "objects": {
    "general": {
      "displayName": "General",
      "properties": {
        "title": {
          "displayName": "Title",
          "type": { "text": true }
        },
        "subtitle": {
          "displayName": "Subtitle",
          "type": { "text": true }
        },
        "rowDensity": {
          "displayName": "Row Density",
          "description": "Control row height to fit more or less data vertically",
          "type": {
            "enumeration": [
              { "value": "compact", "displayName": "Compact" },
              { "value": "normal", "displayName": "Normal" },
              { "value": "comfortable", "displayName": "Comfortable" }
            ]
          }
        }
      }
    },
    "organization": {
      "displayName": "Organization",
      "description": "Configure how work items are grouped and displayed",
      "properties": {
        "groupBy": {
          "displayName": "Group Rows By",
          "description": "Choose how to group the top-level rows",
          "type": {
            "enumeration": [
              { "value": "epic", "displayName": "Epic (Parent hierarchy)" },
              { "value": "areaPath", "displayName": "Area Path / Scheme" },
              { "value": "iterationPath", "displayName": "Iteration Path" },
              { "value": "assignedTo", "displayName": "Assigned To" },
              { "value": "state", "displayName": "State" },
              { "value": "priority", "displayName": "Priority" },
              { "value": "tags", "displayName": "Tags" }
            ]
          }
        },
        "showHierarchy": {
          "displayName": "Show Hierarchy",
          "description": "Display items in a collapsible tree structure",
          "type": { "bool": true }
        },
        "defaultExpanded": {
          "displayName": "Default Expanded",
          "description": "Expand all groups by default",
          "type": { "bool": true }
        }
      }
    },
    "levels": {
      "displayName": "Visible Levels",
      "description": "Choose which work item types to display",
      "properties": {
        "showEpics": {
          "displayName": "Show Epics",
          "type": { "bool": true }
        },
        "showFeatures": {
          "displayName": "Show Features",
          "type": { "bool": true }
        },
        "showMilestones": {
          "displayName": "Show Milestones",
          "type": { "bool": true }
        }
      }
    },
    "dependencies": {
      "displayName": "Dependencies",
      "description": "Configure dependency line display",
      "properties": {
        "show": {
          "displayName": "Show Dependency Lines",
          "description": "Draw lines between parent and child items",
          "type": { "bool": true }
        },
        "showParentChild": {
          "displayName": "Show Parent-Child Links",
          "description": "Draw lines from Epics to their Features/Milestones",
          "type": { "bool": true }
        },
        "showPredecessors": {
          "displayName": "Show Predecessor Links",
          "description": "Draw lines based on Predecessor ID field",
          "type": { "bool": true }
        },
        "lineColor": {
          "displayName": "Line Color",
          "type": { "fill": { "solid": { "color": true } } }
        }
      }
    },
    "colors": {
      "displayName": "Colors",
      "properties": {
        "epicColor": {
          "displayName": "Epic Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "milestoneColor": {
          "displayName": "Milestone Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "featureColor": {
          "displayName": "Feature Color",
          "type": { "fill": { "solid": { "color": true } } }
        }
      }
    },
    "timeScale": {
      "displayName": "Time Scale",
      "properties": {
        "scale": {
          "displayName": "View Scale",
          "type": {
            "enumeration": [
              { "value": "daily", "displayName": "Daily" },
              { "value": "weekly", "displayName": "Weekly" },
              { "value": "monthly", "displayName": "Monthly" },
              { "value": "annual", "displayName": "Annual" }
            ]
          }
        },
        "zoomLevel": {
          "displayName": "Zoom Level",
          "type": {
            "enumeration": [
              { "value": "0.5", "displayName": "50%" },
              { "value": "1", "displayName": "100%" },
              { "value": "2", "displayName": "200%" },
              { "value": "4", "displayName": "400%" }
            ]
          }
        }
      }
    },
    "export": {
      "displayName": "Export",
      "properties": {
        "pdfMode": {
          "displayName": "PDF-Friendly Mode",
          "description": "Expand all items and optimize for PDF export",
          "type": { "bool": true }
        }
      }
    }
  },
  "privileges": []
}
